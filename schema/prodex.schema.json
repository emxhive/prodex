{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prodex Configuration Schema",
  "type": "object",
  "properties": {
    "output": { "type": "string" },
    "scanDepth": { "type": "integer" },
    "limit": { "type": "integer" },
    "baseDirs": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "aliasOverrides": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "entryExcludes": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "importExcludes": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "priorityFiles": {
      "type": "array",
      "description": "List of files (partial names) prioritized in the entry picker.",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": []
}
