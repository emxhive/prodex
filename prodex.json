{
  "$schema": "https://raw.githubusercontent.com/emxhive/prodex/main/schema/prodex.schema.json",
  "version": 3.1,
  "output": {
    "dir": "prodex",
    "versioned": false,
    "prefix": "prodex",
    "format": "md"
  },
  "entry": {
    "files": [""],
    "ui": {
      "roots": [
        "src/core",
        "routes",
        "resources/js/"
      ],
      "scanDepth": 2,
      "priority": [
        "**/routes/web.php",
        "**/routes/api.php",
        "**/index.*",
        "**/main.*",
        "**/app.*"
      ]
    }
  },
  "resolve": {
    "includes": [
      "**/*.g.ts",
      "**/*.interface.ts"
    ],
    "aliases": {
      "@hooks": "resources/js/hooks",
      "@data": "resources/js/data"
    },
    "excludes": [
      "node_modules/**",
      "@shadcn/**",
      "**/components/ui/**"
    ],
    "depth": 10,
    "limit": 200
  },
  "debug": {
    "verbose": false,
    "showSummary": true
  }
}