{
  "version": 3.1,
  "output": {
    "dir": "prodex",
    "versioned": true,
    "prefix": "prodex",
    "format": "md"
  },
  "entry": {
    "files": [
      "**/index.ts"
    ],
    "ui": {
      "roots": [
        "src/core",
        "routes",
        "resources/js/"
      ],
      "scanDepth": 2,
      "priority": [
        "**/routes/web.php",
        "**/routes/api.php",
        "**/index.*",
        "**/main.*",
        "**/app.*"
      ]
    }
  },
  "resolve": {
    "include": [
      "**/*.ts",
      "**/*.interface.ts"
    ],
    "aliases": {
      "@hooks": "resources/js/hooks",
      "@data": "resources/js/data"
    },
    "exclude": [
      "node_modules/**",
      "@shadcn/**",
      "**/components/ui/**"
    ],
    "depth": 10,
    "limit": 200
  },
  "debug": {
    "verbose": false,
    "showSummary": true
  }
}